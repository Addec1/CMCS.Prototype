@model CMCS.Prototype.Models.ClaimVm
@{
    ViewData["Title"] = "New Claim";
}
<h1 class="h4 mb-3">New Claim</h1>
<form>
    <div class="card shadow-sm mb-3">
        <div class="card-body row g-3">
            <div class="col-md-4">
                <label class="form-label">Lecturer</label>
                <input class="form-control" value="@Model.LecturerName" readonly />
            </div>
            <div class="col-md-2">
                <label class="form-label">Month</label>
                <input class="form-control" value="@Model.Month" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Year</label>
                <input class="form-control" value="@Model.Year" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Hourly Rate (R)</label>
                <input class="form-control" value="@Model.HourlyRate" readonly />
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h2 class="h6 mb-0">Entries</h2>
                <button type="button" class="btn btn-sm btn-outline-primary" disabled title="Prototype only">Add Row</button>
            </div>
            <div class="table-responsive">
                <table class="table table-sm align-middle">
                    <thead class="table-light">
                        <tr><th style="width:140px">Date</th><th style="width:120px">Hours</th><th>Description</th><th style="width:100px"></th></tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><input type="date" class="form-control" /></td>
                            <td><input type="number" step="0.5" class="form-control" /></td>
                            <td><input type="text" class="form-control" placeholder="e.g., Lecture, marking" /></td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-danger" disabled>Remove</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="text-end">
                <button class="btn btn-success" disabled title="Prototype only">Submit Claim</button>
            </div>
        </div>
    </div>
</form>
